<div class="row" style="margin-top:20px">
    <form class="col s12">
        <div class="row">
            <div class="input-field col s12 m6">
                <input id="setup-input-host" type="text" class="validate" placeholder="http://example.com"
                    value="{{config.host}}">
                <label for="setup-input-host">Host</label>
            </div>
            <div class="input-field col s12 m6">
                <input id="setup-input-title" type="text" class="validate" value="Felt">
                <label for="setup-input-title">Default Title</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <input id="setup-input-admin-username" type="text" class="validate" value="{{config.admin.username}}">
                <label for="setup-input-admin-username">Admin Username</label>
            </div>
            <div class="input-field col s6">
                <input id="setup-input-admin-password" type="text" class="validate" value="{{config.admin.password}}">
                <label for="setup-input-admin-password">Admin Password</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12 m3">
                <label>
                    <input type="checkbox" id="setup-input-protect-enabled" />
                    <span>Password Protect</span>
                </label>
            </div>
            <div class="input-field col s12 m3">
                <input id="setup-input-protect-password" type="text" class="validate"
                    value="{{config.passwordProtected.password}}" disabled>
                <label for="setup-input-protect-password">Blog Password</label>
            </div>
            <div class="input-field col s12 m3">
                <input id="setup-input-protect-salt" type="text" class="validate"
                    value="{{config.passwordProtected.salt}}" disabled>
                <label for="setup-input-protect-salt">Random Salt</label>
            </div>
            <div class="input-field col s12 m3">
                <input id="setup-input-protect-days" type="number" class="validate"
                    value="{{config.passwordProtected.maxDays}}" disabled>
                <label for="setup-input-protect-maxDays">Max Days Reset</label>
            </div>
        </div>
    </form>

    <button class="btn waves-effect waves-light" type="submit" name="action" id="setup-button-submit">Complete
        <i class="material-icons right">send</i>
    </button>

</div>